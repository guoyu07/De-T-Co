{
	"manifest_version": 2,

	"name": "De-t.co",
	"description": "This extension points all t.co urls on a page to their expanded url.",
	"version": "1.1.0",

	"icons": { "16": "assets/icon16.png",
	           "48": "assets/icon48.png",
              "128": "assets/icon128.png" },

	"permissions": [
		"https://twitter.com/",
		"https://*.twitter.com/"
	],
	"content_scripts": [
		{
			"matches": ["https://twitter.com/*", "https://*.twitter.com/*"],
			"js": ["src/de-t.co.js"]
		}
	]
}
